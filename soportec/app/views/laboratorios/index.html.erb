<div class='row'>
    <div class="small-8 large-centered columns">
        <h1>Listado de Laboratorios</h1>

        <table>
            <tr>
                <th>Numero</th>
                <th>Piso</th>
                <th>Encargado</th>
                <th>Aforo</th>
                <th>Num maquinas</th>
                <th colspan=3>Opciones</th>
            </tr>

        <% @laboratorios.each do |laboratorio| %>
            <tr>
                <td><%= laboratorio.numero %></td>
                <td><%= laboratorio.piso %></td>
                <td><%= laboratorio.encargado_id %></td>
                <td><%= laboratorio.aforo %></td>
                <td><%= laboratorio.num_maquinas %></td>
                <td><%= link_to 'Mostrar', laboratorio %></td>
                <td><%= link_to 'Editar', edit_laboratorio_path(laboratorio) %></td>
                <td><%= link_to 'Eliminar', laboratorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </table>

        <br />
        <%= link_to 'Nuevo Laboratorio', new_laboratorio_path, :class => 'small button' %>

    </div>
</div>