<h1>Busqueda de Profesores</h1>

<%= form_tag :action => 'search', :method=>"GET" do%>

    <%= label_tag(:name, "Nombre:") %>
    <%= text_field_tag(:name) %>
    <br />
    
    <%= label_tag(:lastname, "Apellido:") %>
    <%= text_field_tag(:lastname) %>
    <br />

    <%= label_tag(:curso, "Curso:") %>
    <%= collection_select :curso,:curso_id, @courses, :curso, :dato , :prompt => "Select a course" %>
    <br />

    <%= submit_tag 'Buscar', :class => 'btn-small btn-primary' %>
<%end%>

    <br />
    <br />

<% if @professorsA.present? %>
    RESULTADOS:
    <table class="table">
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Lastname</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @professorsA.each do |professor| %>
      <tr>
        <td><%= professor.code %></td>
        <td><%= professor.name %></td>
        <td><%= professor.lastname %></td>
      </tr>
    <% end %> 
<% end %>

