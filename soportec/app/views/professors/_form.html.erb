<div class="span4 centered">
  <%= form_for(@professor) do |f| %>
    <% if @professor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@professor.errors.count, "error") %> no permitieron guardar el usuario:</h2>

        <ul>
        <% @professor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :code %><br />
      <%= f.text_field :code %>
    </div>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname %>
    </div>
    <div class="actions">
      <%= f.submit "Ingresar", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>