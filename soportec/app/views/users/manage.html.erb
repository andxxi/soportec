<h1>Mantenimiento de Usuarios</h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>Code</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td><%= user.code %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Ver', user %></td>
      <td><%= link_to 'Editar', edit_user_path(user) %></td>
      <td><%= link_to 'Eliminar', user, :confirm => '¿Está seguro?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Nuevo Usuario', new_user_path, :class => 'btn btn-primary' %>