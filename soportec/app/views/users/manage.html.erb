<h1>Listado de Usuarios</h1>

<table class="table">
  <tr>
    <!-- <th>Usuario</th> -->
    <th>Nombre</th>
    <th>Email</th>
    <th>CÃ³digo</th>
    <th>Rol</th>
    <th colspan="3"></th>
  </tr>


  <% @users.each do |user| %>
    <tr>
      <!-- <td><%= user.username %></td> -->
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.code %></td>
      <% role = user.role == nil ? "No tiene rol" : user.role[:name] %>
      <td><%= role %> </td>
      <td><%= link_to 'Ver', user %></td>
      <td><%= link_to 'Editar', edit_user_path(user) %></td>
      <td><%= link_to 'Eliminar', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Nuevo Usuario', new_user_path, :class => 'btn btn-primary' %>