<div class="span5 centered">
  
  <%= form_for(@professor) do |f| %>
    <%= f.fields_for :courses do |q| %>
      <div class="control-group">
        <%= q.label :id, "E.A.P.:", :class => "control-label" %>
        <div class="controls">
          <%= q.collection_select :id, @total_courses, :id, :name, :prompt => "   --- Seleccione un Curso ---   " %>
