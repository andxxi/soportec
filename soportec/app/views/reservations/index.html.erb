<h1>Listing reservations</h1>

<table>
  <tr>
    <th>Dater</th>
    <th>Numhours</th>
    <th>Responsible</th>
    <th>Reason</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.dateR %></td>
    <td><%= reservation.numHours %></td>
    <td><%= reservation.responsible %></td>
    <td><%= reservation.reason %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Reservation', new_reservation_path, :class => 'btn btn-primary' %>
