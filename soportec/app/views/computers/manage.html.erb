<h1>Mantenimiento de Computadoras</h1>

<table class="table">
  <tr>
    <th>Ram</th>
    <th>Procesador</th>
    <th>Motherboard</th>
    <th>Monitor</th>
    <th>Mouse</th>
    <th>Teclado</th>
    <th>Tarjeta de video</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @computers.each do |computer| %>
  <tr>
    <td><%= computer.ram %></td>
    <td><%= computer.processor %></td>
    <td><%= computer.motherboard %></td>
    <td><%= computer.display %></td>
    <td><%= computer.mouse %></td>
    <td><%= computer.keyboard %></td>
    <td><%= computer.videocard %></td>
    <td><%= link_to 'Ver', computer %></td>
    <td><%= link_to 'Editar', edit_computer_path(computer) %></td>
    <td><%= link_to 'Eliminar', computer, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Computadora', new_computer_path, :class => 'btn btn-primary' %>
